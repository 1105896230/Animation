<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xinguang.freshworld.materialdesign.MainActivity">

    <Button
        android:onClick="bottoDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用BottomDialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.002"
        android:id="@+id/button2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button4" />
    <Button
        android:onClick="toolBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用toolBar"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/button5" />
    <Button
        android:onClick="CoordinatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用CoordinatorLayout"
        tools:layout_editor_absoluteY="7dp"
        tools:layout_editor_absoluteX="-13dp"
        android:id="@+id/button3" />
    <Button
        android:onClick="AppBarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用AppBarLayout"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:layout_marginLeft="-2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/button3"
        android:id="@+id/button4"
        app:layout_constraintHorizontal_bias="0.125" />

    <Button
        android:onClick="jianshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简书效果"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/button3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.091" />
</android.support.constraint.ConstraintLayout>
